<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WritingTool.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About WritingTool">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24" KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Close Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- App Logo -->
            <Border Grid.Column="0" 
                    Width="56" Height="56" 
                    CornerRadius="14"
                    Margin="0,0,16,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="0.5"/>
                        <GradientStop Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <FontIcon Glyph="&#xE8D2;" FontSize="26" Foreground="White" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="AppNameText" 
                           Text="WritingTool" 
                           FontSize="26"
                           FontWeight="Bold"/>
                <TextBlock x:Name="AppSubtitleText" 
                           Text="AI-Powered Writing Assistant" 
                           Style="{StaticResource SubtitleTextStyle}"
                           FontSize="13"/>
            </StackPanel>

        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                
                <!-- Version Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="VersionLabelText" Text="Version" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="1.0.0" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        <Border Grid.Column="1" 
                                Background="#2010B981" 
                                CornerRadius="6" 
                                Padding="10,6">
                            <TextBlock x:Name="StableText" 
                                       Text="Stable" 
                                       Foreground="#10B981" 
                                       FontWeight="SemiBold" 
                                       FontSize="12"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Developer Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="14">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="48" Height="48" CornerRadius="24">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#EC4899" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="VG" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="18"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Viorel Ghiurca" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="DeveloperRoleText" 
                                           Text="Software Developer" 
                                           FontSize="12" 
                                           Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <TextBlock x:Name="CertificationText" 
                                   Text="IHK Certified IT Specialist for Application Development"
                                   FontSize="12"
                                   Opacity="0.8"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0" HorizontalAlignment="Center">
            <HyperlinkButton Content="www.viorelghiurca.de" 
                             NavigateUri="https://www.viorelghiurca.de"
                             HorizontalAlignment="Center"/>
            <HyperlinkButton Content="github.com/viorelghiurca" 
                             NavigateUri="https://github.com/viorelghiurca"
                             HorizontalAlignment="Center"
                             Margin="0,-4,0,0"/>
            <TextBlock Text="Â© 2026 Viorel Ghiurca" 
                       FontSize="11" 
                       Opacity="0.5" 
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
    
</Window>
